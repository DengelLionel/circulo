{%- if section.settings.heading != blank or section.blocks.size > 0 -%}
  {% style %}
    #{{ section.id }} {
      background-color: {{ section.settings.color_bg }};
      color: {{ section.settings.color_text }};
    }
    #{{ section.id }} .product-features__icon {
      color: {{ section.settings.color_icon }};
      width: {{ section.settings.icon_size }}px;
    }

    #{{ section.id }} .product-features__icon svg {
      width: {{ section.settings.icon_size }}px;
      height: {{ section.settings.icon_size }}px;
    }
  {% endstyle %}

  {%- liquid
    if section.blocks.size == 4
      assign col_class = 'quarter'
    elsif section.blocks.size == 3
      assign col_class = 'third'
    elsif section.blocks.size == 2
      assign col_class = 'half'
    else
      assign col_class = 'full'
    endif
  -%}

  <div id="{{ section.id }}">
    <div class="product-features align-center container padded-row-lg">
      <h3 class="section-title-container h2 product-features__title" data-cc-animate>
        {{ section.settings.heading | escape }}
      </h3>
      <div class="grid grid--row-gutters">
        {%- for block in section.blocks -%}
          {% assign animate_delay = forloop.index | times: 0.15 %}
          <div class="column {{ col_class }}" data-cc-animate data-cc-animate-delay="{{ forloop.index | times: 0.15 }}s" {{ block.shopify_attributes }}>
            {%- if block.settings.url != blank -%}
              <a href="{{ block.settings.url }}" class="product-features__link">
            {%- endif -%}

            <div class="product-features__icon">
              {%- if block.settings.image != blank -%}
                {%- render 'responsive-image', image: block.settings.image -%}
              {%- else -%}
                {%- case block.settings.icon -%}
                  {%- when 'svg-package' -%}
                    {% render 'svg-package' %}
                  {%- when 'svg-support' -%}
                    {% render 'svg-support' %}
                  {%- when 'svg-shield' -%}
                    {% render 'svg-shield' %}
                  {%- when 'svg-return' -%}
                    {% render 'svg-return' %}
                  {%- when 'svg-cart' -%}
                    {% render 'svg-cart' %}
                  {%- when 'svg-beer' -%}
                    {% render 'svg-beer' %}
                  {%- when 'svg-coffee' -%}
                    {% render 'svg-coffee' %}
                  {%- when 'svg-draw' -%}
                    {% render 'svg-draw' %}
                  {%- when 'svg-map-location' -%}
                    {% render 'svg-map-location' %}
                  {%- when 'svg-send' -%}
                    {% render 'svg-send' %}
                  {%- when 'svg-view' -%}
                    {% render 'svg-view' %}
                  {%- when 'svg-bookmark' -%}
                    {% render 'svg-bookmark' %}
                  {%- when 'svg-compass' -%}
                    {% render 'svg-compass' %}
                  {%- when 'svg-heart-mobile' -%}
                    {% render 'svg-heart-mobile' %}
                  {%- when 'svg-phone' -%}
                    {% render 'svg-phone' %}
                  {%- when 'svg-world' -%}
                    {% render 'svg-world' %}
                  {%- when 'svg-chat' -%}
                    {% render 'svg-chat' %}
                  {%- when 'svg-credit-card' -%}
                    {% render 'svg-credit-card' %}
                  {%- when 'svg-lock' -%}
                    {% render 'svg-lock' %}
                  {%- when 'svg-salad' -%}
                    {% render 'svg-salad' %}
                  {%- when 'svg-thumbs-up' -%}
                    {% render 'svg-thumbs-up' %}
                {%- endcase -%}
              {%- endif -%}
            </div>
            <div class="product-features__caption">
              {{ block.settings.title }}
            </div>

            {%- if block.settings.url != blank -%}
              </a>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
{%- endif -%}

{% schema %}
