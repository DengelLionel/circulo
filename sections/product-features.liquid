    "name": "Product features",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "range",
        "id": "icon_size",
        "min": 20,
        "max": 200,
        "step": 5,
        "unit": "px",
        "label": "Icon size",
        "default": 25
      },
      {
        "type": "color",
        "id": "color_icon",
        "label": "Icon color",
        "default": "#333333"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Text color",
        "default": "#333333"
      },
      {
        "type": "color",
