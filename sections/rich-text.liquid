{% style %}
  #{{ section.id }},
  #{{ section.id }} .section-content {
    background-color: {{ section.settings.color_bg }};
  }
  {%- unless section.settings.color_text contains ',0' -%}
    #{{ section.id }} .rich-text__text {
      color: {{ section.settings.color_text }};
    }
  {%- endunless -%}
  {%- unless section.settings.color_head contains ',0' -%}
    #{{ section.id }} {
      color: {{ section.settings.color_head }};
    }
  {%- endunless -%}
{% endstyle %}

<div class="{% if section.settings.color_bg contains ',0' or section.settings.color_bg == settings.col_page_bg %}spaced-section{% else %}padded-section{% endif %} rich-text" id="{{ section.id }}" data-section-type="rich-text" data-cc-animate>
  <div class="container section-content">
    <div class="rte reading-width align-center">
      {%- if section.settings.title != blank -%}
        <h2 class="rich-text__title">{{ section.settings.title | escape }}</h2>
      {%- endif -%}
      <div class="rich-text__text">
        {{ section.settings.text }}
      </div>
      {%- if section.settings.link_text != blank -%}
        <div class="h2-margin-top">
          <a class="feature-link" href="{{ section.settings.link_url }}">
            {{- section.settings.link_text -}}
          </a>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Rich text",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Rich text"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Use this text to share information about your store with your customers.<\/p><p>Describe product, share announcements, or welcome customers to your store.<\/p>"
      },
      {
        "type": "text",
        "id": "link_text",
        "label": "Link text"
      },
      {
        "type": "url",
        "id": "link_url",
        "label": "Link URL"
      },
      {
        "type": "color",
        "id": "color_bg",
        "label": "Background color",
        "default": "#eeeeee"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Text color",
        "default": "#454f5b"
      },
      {
        "type": "color",
        "id": "color_head",
        "label": "Heading and link color",
        "default": "#212b36"
      }
    ],
    "presets": [
      {
        "name": "Rich text"
      }
    ]
  }
{% endschema %}
